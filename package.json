{
  "name": "eslint-config-standard-kit",
  "version": "0.15.1",
  "private": false,
  "description": "Standard.js linting rules - broken into modular pieces",
  "repository": "git://github.com/swansontec/eslint-config-standard-kit.git",
  "license": "MIT",
  "author": "William Swanson",
  "type": "module",
  "exports": {
    ".": "./src/standardConfig.js",
    "./config": "./config/index.js",
    "./config/jsx": "./config/jsx.js",
    "./config/node": "./config/node.js",
    "./config/react": "./config/react.js",
    "./config/typescript": "./config/typescript.js",
    "./prettier": "./prettier/index.js",
    "./prettier/jsx": "./prettier/jsx.js",
    "./prettier/node": "./prettier/node.js",
    "./prettier/react": "./prettier/react.js",
    "./prettier/typescript": "./prettier/typescript.js"
  },
  "main": "./src/standardConfig.js",
  "files": [
    "/CHANGELOG.md",
    "/README.md",
    "/config",
    "/prettier",
    "/package.json",
    "/src"
  ],
  "scripts": {
    "fix": "npm run lint -- --fix",
    "lint": "eslint .",
    "precommit": "lint-staged && npm test",
    "prepare": "husky && node ./src/rules/build.js",
    "test": "mocha ./test/**/*.test.js && tsc",
    "test-update": "rm test/snapshots/*; UPDATE=1 npm test"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "chai": "^4.2.0",
    "disklet": "^0.4.6",
    "eslint": "^9.31.0",
    "eslint-config-love": "^121.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-react": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "prettier": "^2.2.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "eslint": ">=9",
    "prettier": ">=3",
    "typescript": ">=4.8.4 <5.9.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  }
}
